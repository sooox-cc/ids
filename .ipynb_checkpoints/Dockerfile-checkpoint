FROM jupyter/datascience-notebook:latest

# Install additional dependencies if needed
RUN pip install --no-cache-dir \
    pandas \
    numpy \
    scikit-learn \
    matplotlib \
    seaborn

WORKDIR /workspace

# Expose port for Jupyter
EXPOSE 8888

# Run Jupyter Lab
CMD ["jupyter", "lab", "--ip=0.0.0.0", "--allow-root", "--no-browser"]
